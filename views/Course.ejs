<!-- course form code  -->
    <div class="col-lg-12">
        <div class="row" style="padding-top: 40px;">
            <!-- FORM Panel -->
            <div class="col-md-4">

                <form action="/Add_Course" method="post">
                    <div class="card">
                        
                        <div class="card-header " style="background-color: rgb(58, 94, 212); color:rgb(255, 255, 255)">
                            <h3>Course Form</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Course:</label>
                                <input type="text" class="form-control"  placeholder="Enter Course Name" pattern="[a-zA-Z]+" name="course" required>
                            </div>
                            <div class="form-group">
                                <label for="description">Description:</label>
                                <textarea class="form-control"  placeholder="Enter Description" name="description" required></textarea>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-sm btn-primary col-sm-4 offset-md-4" >Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="background-color: rgb(58, 94, 212); color:#ffff">
                        <b>course List</b>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Course</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user){ %>
                                    <tr>
                                        <td class="text-center">
                                            <%= user.id %>
                                        </td>
                                        <td class="">
                                            <p>Course: <b>
                                                    <%= user.course %>
                                                </b></p>
                                            <p>Description: <small><b>
                                                        <%= user.description %>
                                                    </b></small></p>
            
                                        </td>
                                        <td>
                                            <a href="C_edit/<%= user.id %>" class="btn btn-sm btn-primary offset-md-2">Edit</a>
                                            <a href="C_delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



